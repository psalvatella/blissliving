<div data-section-id="{{ section.id }}" data-section-type="section-banner-v10" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v10 mt-all ">
    <div class="container container-v2">
      <div class="row  no-gutters">   
        <div class="col-lg-6">
          <img data-src="{% if section.settings.img_banner1 != blank %} {{section.settings.img_banner1 | img_url : 'master'}} {% else %} //via.placeholder.com/960x960 {% endif %}" class="lazyload img-fluid w-100" alt>
        </div>
        <div class="col-lg-6">
          <div class="row  no-gutters">
            <div class="col-md-6 order-md-1 order-2">
              <div class="box-banner">
                <div class="content-banner">
                  {% if section.settings.title_banner1 != blank %}
                  <h3 class="title-{{ section.id }}">{{section.settings.title_banner1}}</h3>
                  {% endif %}
                  {%  if section.settings.sub_title_banner1 != blank %}
                  <p class="content-{{ section.id }}">{{section.settings.sub_title_banner1}}</p>
                  {% endif %}
                  {% if section.settings.btn_banner1 != blank %}
                  <a href="{{section.settings.url_btn_banner1}}" class="btn-banner-{{ section.id }}">{{section.settings.btn_banner1}}</a>
                  {% endif %}
                </div>
              </div>
            </div>
            <div class="col-md-6 order-md-2 order-1">
              <img data-src="{% if section.settings.img_banner2 != blank %} {{section.settings.img_banner2 | img_url : 'master' }} {% else %}  //via.placeholder.com/480x480 {% endif %} " class="lazyload img-fluid w-100" alt>
            </div>
          </div>
          <div class="row  no-gutters">
            <div class="col-md-6">
              <img data-src="{% if section.settings.img_banner3 != blank %} {{section.settings.img_banner3 | img_url : 'master' }} {% else %}  //via.placeholder.com/480x480 {% endif %} " class="lazyload img-fluid w-100" alt>
            </div>
            <div class="col-md-6">
              <div class="box-banner">
                <div class="content-banner">
                  {% if section.settings.title_banner2 != blank %}
                  <h3 class="title-{{ section.id }}">{{section.settings.title_banner2}}</h3>
                  {% endif %}
                  {%  if section.settings.sub_title_banner2 != blank %}
                  <p class="content-{{ section.id }}">{{section.settings.sub_title_banner2}}</p>
                  {% endif %}
                  {% if section.settings.btn_banner2 != blank %}
                  <a href="{{section.settings.url_btn_banner2}}" class="btn-banner-{{ section.id }}">{{section.settings.btn_banner2}}</a>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row no-gutters">
        <div class="col-lg-6">
          <div class="row  no-gutters">
            <div class="col-md-6 order-md-2 order-lg-1">
              <img data-src="{% if section.settings.img_banner4 != blank %} {{section.settings.img_banner4 | img_url : 'master'}} {% else %} //via.placeholder.com/480x480 {% endif %}" class="lazyload img-fluid w-100" alt>
            </div>
            <div class="col-md-6 order-md-1 order-lg-2">
              <div class="box-banner">
                <div class="content-banner">
                  {% if section.settings.title_banner3 != blank %}
                  <h3 class="title-{{ section.id }}">{{section.settings.title_banner3}}</h3>
                  {% endif %}
                  {%  if section.settings.sub_title_banner3 != blank %}
                  <p class="content-{{ section.id }}">{{section.settings.sub_title_banner3}}</p>
                  {% endif %}
                  {% if section.settings.btn_banner3 != blank %}
                  <a href="{{section.settings.url_btn_banner3}}" class="btn-banner-{{ section.id }}">{{section.settings.btn_banner3}}</a>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <img data-src="{% if section.settings.img_banner5 != blank %} {{section.settings.img_banner5 | img_url : 'master'}} {% else %} //via.placeholder.com/960x480 {% endif %}" class="lazyload img-fluid w-100" alt>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .section-banner-v10 .box-banner .content-banner .btn-banner-{{ section.id }} {
    color: {{section.settings.color_btn}} ;
    background : {{section.settings.bg_btn}};
  }
  .section-banner-v10 .box-banner .content-banner .btn-banner-{{ section.id }}:hover {
    color: {{section.settings.color_btn_hover}} ;
    background: {{section.settings.bg_btn_hover}};
  }
  .section-banner-v10 .box-banner .content-banner .title-{{ section.id }} {
    color: {{section.settings.color_title}};
  }
  .section-banner-v10 .box-banner .content-banner .content-{{ section.id }} {
    color: {{section.settings.color_content}};
  }
</style>

