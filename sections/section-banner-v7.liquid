<div data-section-id="{{ section.id }}" data-section-type="section-banner-v7" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v7 mt-all">
    <div class="lazyload">
      <div class="container container-v2">
        <div class="row">        
          <div class="col-lg-6 col-md-6 col-12 col-sm-12">
            <div class="banner-ver">
              <div class="banner-item">
                <a href="{{section.settings.url_button_banner3}}" class="box-img d-block">
                  {% if section.settings.banner_img3 != blank %}
                  <img data-src="{{section.settings.banner_img3 | img_url: 'master'}}" class="lazyload img-fluid w-100" alt="_img">
                  {% else %}
                  <img data-src="//via.placeholder.com/690x690" class="lazyload img-fluid w-100" alt="_img">
                  {% endif %}
                </a>
                <div class="content">
                  {% if section.settings.title_banner3 != blank %}
                  <h3 class="title-banner" style="color: {{section.settings.color_title_banner}}">{{section.settings.title_banner3}}</h3>
                  {% endif %}
                  {% if section.settings.sub_title_bottom3 != blank %}
                  <p class="sub-title-bottom" style="color: {{section.settings.color_sub_title_bottom}}">{{section.settings.sub_title_bottom3}}</p>
                  {% endif %}
                  {% if section.settings.button_banner3 != blank %}
                  <a href="{{section.settings.url_button_banner3}}">{{section.settings.button_banner3}}</a>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-6 col-md-6 col-12 col-sm-12">
            <div class="wrap-banner">
              <div class="banner-item">
                <a href="{{section.settings.url_button_banner1}}" class="box-img d-block">
                  {% if section.settings.banner_img1 != blank %}
                  <img data-src="{{section.settings.banner_img1 | img_url: 'master'}}" class="lazyload img-fluid w-100" alt="_img">
                  {% else %}
                  <img data-src="//via.placeholder.com/690x330" class="lazyload img-fluid w-100" alt="_img">
                  {% endif %}
                </a>
                <div class="content">
                  {% if section.settings.title_banner1 != blank %}
                  <h3 class="title-banner" style="color: {{section.settings.color_title_banner}}">{{section.settings.title_banner1}}</h3>
                  {% endif %}
                  {% if section.settings.sub_title_bottom1 != blank %}
                  <p class="sub-title-bottom" style="color: {{section.settings.color_sub_title_bottom}}">{{section.settings.sub_title_bottom1}}</p>
                  {% endif %}
                </div>
              </div>
              <div class="banner-item">
                <a href="{{section.settings.url_button_banner2}}" class="box-img d-block">
                  {% if section.settings.banner_img2 != blank %}
                  <img data-src="{{section.settings.banner_img2 | img_url: 'master'}}" class="lazyload img-fluid w-100" alt="_img">
                  {% else %}
                  <img data-src="//via.placeholder.com/690x330" class="lazyload img-fluid w-100" alt="_img">
                  {% endif %}
                </a>
                <div class="content">
                  {% if section.settings.title_banner2 != blank %}
                  <h3 class="title-banner" style="color: {{section.settings.color_title_banner}}">{{section.settings.title_banner2}}</h3>
                  {% endif %}
                  {% if section.settings.sub_title_bottom2 != blank %}
                  <p class="sub-title-bottom" style="color: {{section.settings.color_sub_title_bottom}}">{{section.settings.sub_title_bottom2}}</p>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

