<div data-section-id="{{ section.id }}" data-section-type="section-slideshow-v5" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %} {% if section.settings.sections_layout == "dark" %}background: {{section.settings.sections_bg_color}};{% endif %}">
  <div class="section-slideshow-v5">
    <div class="">
      <div class="slick-side-h5">       
        {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
        {% if block.type == "slideshow" %}
        <div class="item-slide">
          <img data-src="{% if block.settings.img_slider != blank %} {{block.settings.img_slider | img_url: 'master'}}{% else %}//via.placeholder.com/800x800{% endif %}" class="lazyload img-fluid w-100" alt="slideshow">
          <div class="box-content">
            <div class="content">
              {% if block.settings.title_slide != blank %}
              <h3 style="color: {{block.settings.color_title}}">{{block.settings.title_slide}}</h3>
              {% endif %}
              <a class="btn-slide-{{ section.id }}" href="{{block.settings.url_link_collection}}" class="">{{block.settings.link_collection}}<i class="fa fa-angle-double-right" aria-hidden="true"></i></a>
            </div>
          </div>
        </div>
        {% endif %}
        {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</div>
<style>
  {% for block in section.blocks %}
  {% if block.type == 'slideshow' %}
  .section-slideshow-v5 .slick-side-h5 .item-slide .box-content .content .btn-slide-{{ section.id }} {
    color: {{block.settings.color_btn}};
  }
  .section-slideshow-v5 .slick-side-h5 .item-slide .box-content .content .btn-slide-{{ section.id }}:hover {
    color:  {{block.settings.color_btn_hover}};
  }
  {% endif %}
  {% endfor %}
</style>

